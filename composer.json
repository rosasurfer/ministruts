{
    "name":        "rosasurfer/ministruts",
    "description": "Java Struts inspired MVC micro framework for PHP",
    "type":        "library",
    "license":     "WTFPL",
    "authors": [{
        "name":  "Peter Walther",
        "email": "ministruts@rosasurfer.com"
    }],
    "config": {
        "platform": {
            "php": "5.6.40"
        },
        "optimize-autoloader": true
    },
    "require": {
        "php":           "^5.6",
        "ext-ctype":     "*",
        "ext-filter":    "*",
        "ext-json":      "*",
        "ext-libxml":    "*",
        "ext-mbstring":  "*",
        "ext-simplexml": "*",
        "psr/container": "^1.0"
    },
    "autoload": {
        "classmap": ["src/"],
        "files":    ["src/load.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-0.9": "0.9.x-dev"
        }
    },
    "scripts": {
        "post-install-cmd": "bash bin/git-hooks/setup.sh post-checkout post-merge"
    }
}
