{
    "name":        "rosasurfer/ministruts",
    "description": "Struts 1.2 inspired MVC web framework for PHP",
    "type":        "library",
    "homepage":    "http://ministruts.rosasurfer.com/",
    "license":     "WTFPL",
    "authors": [{
        "name":  "Peter Walther",
        "email": "ministruts@rosasurfer.com"
    }],
    "config": {
        "platform": {
            "php": "5.6"
        },
        "vendor-dir":         "etc/vendor",
        "optimize-autoloader": true
    },
    "require": {
        "php":          ">=5.6",
        "ext-mbstring": "*"
    },
    "autoload": {
        "classmap": ["src/"],
        "files":    ["src/load.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.6.x-dev"
        }
    }
}
