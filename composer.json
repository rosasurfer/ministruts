{
    "name":        "rosasurfer/ministruts",
    "description": "MVC micro framework for PHP inspired by Java Struts",
    "type":        "library",
    "license":     "Unlicense",
    "authors": [{
        "name":  "Peter Walther",
        "email": "ministruts@rosasurfer.com"
    }],
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "require": {
        "php":                 "^7.4|^8.0",
        "ext-ctype":           "*",
        "ext-filter":          "*",
        "ext-json":            "*",
        "ext-libxml":          "*",
        "ext-mbstring":        "*",
        "ext-simplexml":       "*",
        "phpmailer/phpmailer": "^7.0",
        "psr/container":       "^1.0|^2.0"
    },
    "require-dev": {
        "phpstan/phpstan":           "^2.0,!=2.1.19",
        "phpunit/phpunit":           "^9.6",
        "slevomat/coding-standard":  "^8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "rosasurfer\\ministruts\\": "src/"
        },
        "files": ["src/load.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "rosasurfer\\ministruts\\phpstan\\": "etc/phpstan/extension/",
            "rosasurfer\\ministruts\\tests\\":   "tests/"
        },
        "classmap": [
            "etc/phpstan/symbols/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.12.x-dev"
        }
    }
}
