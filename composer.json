{
    "name":        "rosasurfer/ministruts",
    "description": "MVC micro framework inspired by Java Struts",
    "type":        "library",
    "license":     "WTFPL",
    "authors": [{
        "name":  "Peter Walther",
        "email": "ministruts@rosasurfer.com"
    }],
    "config": {
        "platform": {
            "php": "7.4"
        },
        "optimize-autoloader": true
    },
    "require": {
        "php":           "7.4 - 8",
        "ext-ctype":     "*",
        "ext-filter":    "*",
        "ext-json":      "*",
        "ext-libxml":    "*",
        "ext-mbstring":  "*",
        "ext-simplexml": "*",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "rosasurfer\\ministruts\\": "src/"
        },
        "classmap": [
            "etc/phpstan/extension/",
            "etc/phpstan/symbols/"
        ],        
        "exclude-from-classmap": [
            "etc/phpstan/symbols/alias*", 
            "etc/phpstan/symbols/php_*"
        ],
        "files": ["src/load.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "rosasurfer\\ministruts\\test\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.11.x-dev"
        }
    }
}
