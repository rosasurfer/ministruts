{
    "name":        "rosasurfer/ministruts",
    "description": "Struts 1.2 inspired MVC web framework for PHP",
    "type":        "library",
    "license":     "WTFPL",
    "authors": [{
        "name":  "Peter Walther",
        "email": "ministruts@rosasurfer.com"
    }],
    "config": {
        "platform": {
            "php": "5.6"
        },
        "vendor-dir":         "etc/vendor",
        "optimize-autoloader": true
    },
    "require": {
        "php":           "^5.6",
        "ext-ctype":     "*",
        "ext-json":      "*",
        "ext-mbstring":  "*",
        "psr/container": "^1.0"
    },
    "autoload": {
        "classmap": ["src/"],
        "files":    ["src/load.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-master":   "0.9.x-dev",
            "dev-0.10-dev": "0.10.x-dev"
        }
    }
}
