#
# Intentionally trigger a server error if mod_rewrite is disabled, to protect the project
# directory from accidently being exposed to the web.
#
RewriteEngine On
RewriteCond   %{REQUEST_FILENAME}  !-d
RewriteCond   %{REQUEST_FILENAME}  !-f
RewriteRule   ^                    index.php  [L]

DirectoryIndex index.php
