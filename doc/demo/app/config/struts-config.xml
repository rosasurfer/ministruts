<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config SYSTEM "struts-config.dtd">

<struts-config>

	<!-- =============================================== Action Mappings ================================================ -->
	<action-mappings>
		<mapping path="/"  include=".home"/>
	</action-mappings>

                                                          
	<!-- ==================================================== Tiles ===================================================== -->
    <tiles namespace="rosasurfer/ministruts/demo/view">
    
		<!-- default layout -->
		<tile name=".default" file="layouts/default.phtml"/>


		<!-- home -->
		<tile name=".home"  extends=".default">
			<include name="content"  value="tiles/home.phtml"/>
		</tile>
	</tiles>

</struts-config>
