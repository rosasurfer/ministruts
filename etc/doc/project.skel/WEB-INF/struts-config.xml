<?xml version="1.0" encoding="iso-8859-15"?>
<!DOCTYPE struts-config SYSTEM "dtd/php-struts-config.dtd">

<struts-config doc-base="./include">

   <global-forwards>
      <forward name="404"	include=".404"/>
   </global-forwards>


   <action-mappings>
      <mapping path="/index.php"  include=".home"/>
   </action-mappings>


   <tiles>
      <tile name=".home"  path="layouts/default.html">
         <set name="content"  value="tiles/hello_world.html"/>
      </tile>

      <tile name=".404"   path="layouts/404.html"/>
   </tiles>

</struts-config>
